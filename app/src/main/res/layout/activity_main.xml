<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/contentLayout">

    <include
        layout="@layout/top_bar_main"
        android:id="@+id/main_app_bar"/>


    <include
        layout="@layout/tabs"
        android:id="@+id/main_tabs"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/main_fashion_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/thumbnail_channel_fashion"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fashion"
                        android:textColor="#FFFFFF"
                        android:padding="10dp" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/main_science_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/thumbnail_channel_science"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Science"
                        android:textColor="#FFFFFF"
                        android:padding="10dp" />


                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/main_auto_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/thumbnail_channel_auto"
                    android:layout_weight="1"
                    android:gravity="bottom">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Auto"
                        android:textColor="#FFFFFF"
                        android:padding="10dp"/>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/main_technology_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/thumbnail_channel_technology"
                    android:layout_weight="1"
                    android:gravity="bottom">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Technology"
                        android:textColor="#FFFFFF"
                        android:padding="10dp"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/main_entertainment_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/thumbnail_channel_entertainment"
                    android:layout_weight="1"
                    android:gravity="bottom">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Entertainment"
                        android:textColor="#FFFFFF"
                        android:padding="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_environment_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/thumbnail_channel_environment"
                    android:layout_weight="1"
                    android:gravity="bottom">


                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Environment"
                        android:textColor="#FFFFFF"
                        android:padding="10dp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/main_finances_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/thumbnail_channel_finance"
                    android:layout_weight="1"
                    android:gravity="bottom">


                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Finance"
                        android:textColor="#FFFFFF"
                        android:padding="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_travel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/thumbnail_channel_travel"
                    android:layout_weight="1"
                    android:gravity="bottom">


                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Travel"
                        android:textColor="#FFFFFF"
                        android:padding="10dp"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>